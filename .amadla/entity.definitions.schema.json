{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "https://raw.githubusercontent.com/AmadlaOrg/Entity/master/.amadla/entity.definitions.schema.json",
  "title": "Entity Definitions Schema",
  "description": "Defines the definitions of entity section.",
  "definitions": {
    "_entity": {
      "type": "object",
      "properties": {
        "_entity": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": {
        ".+": {
          "type": "any"
        }
      },
      "required": ["_entity"]
    }
  }
}